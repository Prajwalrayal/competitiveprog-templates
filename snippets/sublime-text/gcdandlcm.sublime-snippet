ll gcd(ll a, ll b) {
    return b ? gcd (b, a % b) : a;
}

ll gcd(int a, int b){
	return b ? gcd(b, a % b) : (ll)a;
}

ll lcm(int a, int b){
	return ((1ll * a * b) / gcd(a, b));
}

ll lcm(ll a, ll b){
	return ((a * b) / gcd(a, b));
}

]]></content>
